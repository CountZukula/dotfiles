[bar/example]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 27
;offset-x = 2%
;offset-y = 1%
radius = 0.0
fixed-center = true 
line-size = 3
line-color = #f00

; all the bar colors
background = ${colors.background}
foreground = ${colors.foreground}
border-color = ${colors.background}

;i'm faking the left and right margins with a fat border. i'm helpless
;border-size = 20
;border-left-size = 16 
;border-right-size = 16 

border-bottom-size = 3
padding-left = 0 
padding-right = 2
; this is for every module
module-margin-left = 1
module-margin-right = 2

; set the bar fonts
;font-0 = fixed:pixelsize=10;1
;font-0 = "Wuncon Siji:pixelsize=15;1"
font-0 = FuraCode Nerd Font:pixelsize=11;1
;font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
;font-2 = "Inconsolata\ For\ Powerline:pixelsize=10;1"

;unused modules - mpd xbacklight backlight-acpi alsa 
modules-left = i3  
modules-center = date temperature battery xkeyboard memory cpu eth filesystem updates-arch
modules-right = pulseaudio wlan powermenu 

tray-position = right
tray-padding = 2
;tray-transparent = true
tray-detached = false
tray-maxsize = 16
;tray-background = ${colors.background-alt}
;this makes sure that the tray doesn't run off to the right of the monitor - only enable this when the bar's width is a bit off
tray-offset-x = 0
tray-offset-y = 0
;tray-padding = 0
tray-scale = 1.0

;this makes sure that i3 doesn't reposition everything when polybar becomes active... is shit
override-redirect = false
wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
;cursor-scroll = ns-resize
cursor-scroll = pointer


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
